<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="1000000"
        android:inputType="number"
        android:key="my_number_val"
        android:maxLines="1"
        android:maxLength="7"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="My address" />

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="3"
        android:inputType="number"
        android:key="repeat_val"
        android:maxLines="1"
        android:maxLength="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Repeat" />

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/pref_source"
        android:entryValues="@array/pref_source"
        android:key="source_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="Source" />


</PreferenceScreen>
